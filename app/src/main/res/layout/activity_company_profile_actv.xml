<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyProfileActv">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/company"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_overlay_getstarted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/logo_rafauli"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="116dp"
                android:fontFamily="@font/mmedium"
                android:text="About Us"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <LinearLayout
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_dark"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="24dp"
                android:paddingRight="12dp"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mmedium"
                        android:text="Rafauli"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/white" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/mlight"
                        android:text="     Awal terbentuknya perusahaan ini dimulai dari kumpulan photography dari hobi memotret hingga membentuk sebuah komunitas bernama Rafauli Photography di bulan Oktober 2011 bebe-rapa kali melakukan event dan pemotretan model yang di padu dengan alam adalah konsep yang sangat sempurna.Selanjutnya Rafauli Photography merubah haluan usahanya dan merubah namanya menjadi Rafauli Trip dan dibentuk pada tanggal 15 Juni 2012, beberapa Event trip antara lain Trip Krakatau, Trip Ujungkulon, Trip Teluk Kiluan, Trip Karimunjawa, Trip Gilitrawangan. Juni 2014 Rafauli Trip melegalkan usahanya dengan melengkapi akta notaris dan perijinannya dan berubah nama menjadi CV. Rafauli. 2016 CV. Rafauli Mengembangkan Bisnisnya dan menambah sub bidang usaha Wisata Tirta, Pelatihan dan Kursus Diving. Visi dari perusahaan ini adalah menjadi perusahaan terdepan dan terbesar di Indonesia dalam bidang jasa pelayanan perjalanan wisata dan sektor bisnisnya dengan kualitas pelayanan terbaik yang dapat memberikan kontribusi nyata bagi semua pemakai jasanya dan misi dari perusahaan tersebut adalah sebagai berikut:
\n 1. Memberikan Inovasi yang baik dalam pelayanan jasanya kepada semua yang berhubungan.
\n 2. Memberikan sesuatu yang disepakati serta menjadi sebuah kepercayaan dengan pelayanan yang sangat maksimal.
\n 3. Mengembangkan dan menyempurnakan citra perusahaan yang baik dan bersih, serta mengutamakan profesional yang tinggi."
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/mregular"
                        android:text="Alamat: Swimming Pool Aquatic Center Kab. Bekasi Jl. Science Boulevard Komplek Stadion Wibawa Mukti, Sertajaya, East Cikarang, Bekasi 17530"
                        android:textColor="@color/orange"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_getstarted"
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="42dp"
                android:background="@drawable/btn_bg_red"
                android:fontFamily="@font/mmedium"
                android:text="get started"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>